<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".autoskola2$PlaceholderFragment"
    android:background="@drawable/test"
    android:alpha="22"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:adjustViewBounds="false"
        android:background="@drawable/logo"
        android:minHeight="120dp"
        android:alpha="0.55"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ispiti "
        android:onClick="promjenastrane1"
        android:id="@+id/button"
        android:width="120dp"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingRight="4dp"
        android:paddingBottom="5dp"
        android:layout_above="@+id/button35"
        android:layout_centerHorizontal="true"
        android:alpha="0.4"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O nama"
        android:id="@+id/button34"
        android:onClick="promjenastrane2"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingRight="4dp"
        android:paddingBottom="5dp"
        android:width="120dp"
        android:layout_below="@+id/button35"
        android:layout_alignLeft="@+id/button35"
        android:layout_alignStart="@+id/button35"
        android:alpha="0.4"
        android:layout_alignRight="@+id/button35"
        android:layout_alignEnd="@+id/button35" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web "
        android:onClick="nesto"
        android:id="@+id/button35"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingRight="4dp"
        android:paddingBottom="5dp"
        android:width="120dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Copyright by Ante Rota and Antonio Bacic"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fffafff9"
        android:alpha="2" />


</RelativeLayout>
